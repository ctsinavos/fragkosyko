---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact – Fragkosyko" description="Get in touch with us. Find our location in Naxos, opening hours, and contact details.">
  <Header />

  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-warm-sand/30 to-sea-teal/10">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-serif font-bold text-garden-green mb-6">
        Get in Touch
      </h1>
      <p class="text-lg max-w-3xl mx-auto text-charcoal/80">
        We'd love to hear from you. Visit us in Naxos, give us a call, or send a message.
      </p>
    </div>
  </section>

  <!-- Contact Info & Map -->
  <section class="py-20 bg-cycladic-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">

        <!-- Contact Details -->
        <div>
          <h2 class="text-3xl font-serif font-bold mb-8 text-garden-green">
            Visit Our Garden
          </h2>

          <div class="space-y-6 mb-8">
            <!-- Location -->
            <div class="flex items-start">
              <div class="w-12 h-12 bg-garden-green/10 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-garden-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Location</h3>
                <p class="text-charcoal/70">Central Naxos Town</p>
                <p class="text-charcoal/70">Naxos, Cyclades</p>
                <p class="text-charcoal/70">Greece, 84300</p>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start">
              <div class="w-12 h-12 bg-sea-teal/10 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-sea-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Phone</h3>
                <a href="tel:+302285012345" class="text-sea-teal hover:underline">+30 228 501 2345</a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start">
              <div class="w-12 h-12 bg-prickly-pear/10 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-prickly-pear" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Email</h3>
                <a href="mailto:info@fragkosyko.com" class="text-prickly-pear hover:underline">info@fragkosyko.com</a>
              </div>
            </div>

            <!-- Opening Hours -->
            <div class="flex items-start">
              <div class="w-12 h-12 bg-garden-green/10 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-garden-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Opening Hours</h3>
                <p class="text-charcoal/70">Daily: 8:00 AM - 12:00 AM</p>
                <p class="text-sm text-charcoal/60 mt-2">Brunch: 8:00 AM - 2:00 PM</p>
                <p class="text-sm text-charcoal/60">Evening: 6:00 PM - 12:00 AM</p>
              </div>
            </div>

            <!-- Social -->
            <div class="flex items-start">
              <div class="w-12 h-12 bg-sea-teal/10 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-sea-teal" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Follow Us</h3>
                <div class="flex space-x-3">
                  <a href="#" class="text-charcoal hover:text-sea-teal transition-colors">Instagram</a>
                  <span class="text-charcoal/30">•</span>
                  <a href="#" class="text-charcoal hover:text-sea-teal transition-colors">Facebook</a>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Action Button -->
          <a
            href="/reservations"
            class="inline-block w-full text-center px-8 py-4 bg-garden-green text-cycladic-white rounded-full hover:bg-garden-green-dark transition-all hover:shadow-lg font-semibold"
          >
            Book a Table
          </a>
        </div>

        <!-- Map -->
        <div>
          <h2 class="text-3xl font-serif font-bold mb-8 text-garden-green">
            Find Us
          </h2>
          <div class="rounded-2xl overflow-hidden shadow-xl h-[500px]">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3184.2101661730935!2d25.49456881167782!3d37.05247457206026!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1498076098f6fbb9%3A0x169e2c799b8c9c41!2s44%20Miles%20Garden%20Coffee%20%26%20Food!5e0!3m2!1sen!2sgr!4v1763232625391!5m2!1sen!2sgr"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-20 bg-gradient-to-br from-warm-sand/20 to-sea-teal/10">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-serif font-bold text-center mb-4 text-garden-green">
          Send Us a Message
        </h2>
        <p class="text-center text-charcoal/70 mb-12">
          Have a question or special request? Drop us a line and we'll get back to you soon.
        </p>

        <form
          class="bg-white rounded-2xl shadow-xl p-8 md:p-12"
          name="contact"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
        >
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>Don't fill this out: <input name="bot-field" /></label>
          </p>

          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <!-- Name -->
            <div>
              <label for="contact-name" class="block text-sm font-semibold text-charcoal mb-2">
                Name *
              </label>
              <input
                type="text"
                id="contact-name"
                name="name"
                required
                class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
                placeholder="Your name"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="contact-email" class="block text-sm font-semibold text-charcoal mb-2">
                Email *
              </label>
              <input
                type="email"
                id="contact-email"
                name="email"
                required
                class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
                placeholder="your@email.com"
              />
            </div>
          </div>

          <!-- Message -->
          <div class="mb-8">
            <label for="contact-message" class="block text-sm font-semibold text-charcoal mb-2">
              Message *
            </label>
            <textarea
              id="contact-message"
              name="message"
              rows="6"
              required
              class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
              placeholder="Tell us what's on your mind..."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full px-8 py-4 bg-garden-green text-cycladic-white rounded-full hover:bg-garden-green-dark transition-all hover:shadow-lg text-lg font-semibold"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Directions Note -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-2xl mx-auto">
        <h3 class="text-2xl font-serif font-bold mb-4 text-garden-green">Getting Here</h3>
        <p class="text-charcoal/70 leading-relaxed">
          We're located in the heart of Naxos Town, just a short walk from the port and main square.
          Look for the white archway adorned with greenery—you'll know you've found our hidden garden.
          Street parking is available nearby, or we're easily accessible on foot from most hotels in the town center.
        </p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

