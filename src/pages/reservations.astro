
---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Reservations â€“ Fragkosyko" description="Book your table in our hidden garden. Reserve your spot for brunch or evening cocktails.">
  <Header />

  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-warm-sand/30 to-sea-teal/10">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-serif font-bold text-garden-green mb-6">
        Reserve Your Table
      </h1>
      <p class="text-lg max-w-3xl mx-auto text-charcoal/80">
        Book your spot in our garden. Whether it's a sunlit brunch or an evening under the stars,
        we're ready to welcome you.
      </p>
    </div>
  </section>

  <!-- Reservation Form -->
  <section class="py-20 bg-cycladic-white">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">

        <!-- Info Banner -->
        <div class="bg-garden-green/10 border border-garden-green/30 rounded-2xl p-6 mb-8">
          <p class="text-center text-charcoal">
            <strong>For groups of 8 or more,</strong> please call us directly at
            <a href="tel:+302285012345" class="text-garden-green font-semibold hover:underline">+30 228 501 2345</a>
          </p>
        </div>

        <!-- Form -->
        <form
          class="bg-white rounded-2xl shadow-xl p-8 md:p-12"
          name="reservations"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
        >
          <input type="hidden" name="form-name" value="reservations" />
          <p class="hidden">
            <label>Don't fill this out: <input name="bot-field" /></label>
          </p>

          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-semibold text-charcoal mb-2">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
                placeholder="Your name"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-semibold text-charcoal mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
                placeholder="your@email.com"
              />
            </div>
          </div>

          <!-- Phone -->
          <div class="mb-6">
            <label for="phone" class="block text-sm font-semibold text-charcoal mb-2">
              Phone Number *
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
              placeholder="+30 ..."
            />
          </div>

          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <!-- Date -->
            <div>
              <label for="date" class="block text-sm font-semibold text-charcoal mb-2">
                Date *
              </label>
              <input
                type="date"
                id="date"
                name="date"
                required
                class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
              />
            </div>

            <!-- Time -->
            <div>
              <label for="time" class="block text-sm font-semibold text-charcoal mb-2">
                Time *
              </label>
              <select
                id="time"
                name="time"
                required
                class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
              >
                <option value="">Select time</option>
                <optgroup label="Brunch">
                  <option value="08:00">08:00 AM</option>
                  <option value="08:30">08:30 AM</option>
                  <option value="09:00">09:00 AM</option>
                  <option value="09:30">09:30 AM</option>
                  <option value="10:00">10:00 AM</option>
                  <option value="10:30">10:30 AM</option>
                  <option value="11:00">11:00 AM</option>
                  <option value="11:30">11:30 AM</option>
                  <option value="12:00">12:00 PM</option>
                  <option value="12:30">12:30 PM</option>
                  <option value="13:00">01:00 PM</option>
                  <option value="13:30">01:30 PM</option>
                </optgroup>
                <optgroup label="Evening">
                  <option value="18:00">06:00 PM</option>
                  <option value="18:30">06:30 PM</option>
                  <option value="19:00">07:00 PM</option>
                  <option value="19:30">07:30 PM</option>
                  <option value="20:00">08:00 PM</option>
                  <option value="20:30">08:30 PM</option>
                  <option value="21:00">09:00 PM</option>
                  <option value="21:30">09:30 PM</option>
                  <option value="22:00">10:00 PM</option>
                </optgroup>
              </select>
            </div>
          </div>

          <!-- Number of Guests -->
          <div class="mb-6">
            <label for="guests" class="block text-sm font-semibold text-charcoal mb-2">
              Number of Guests *
            </label>
            <select
              id="guests"
              name="guests"
              required
              class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
            >
              <option value="">Select number of guests</option>
              <option value="1">1 Guest</option>
              <option value="2">2 Guests</option>
              <option value="3">3 Guests</option>
              <option value="4">4 Guests</option>
              <option value="5">5 Guests</option>
              <option value="6">6 Guests</option>
              <option value="7">7 Guests</option>
              <option value="8+">8+ Guests (Please call us)</option>
            </select>
          </div>

          <!-- Special Requests -->
          <div class="mb-8">
            <label for="message" class="block text-sm font-semibold text-charcoal mb-2">
              Special Requests or Notes
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-3 border border-warm-sand rounded-lg focus:ring-2 focus:ring-garden-green focus:border-transparent transition-all"
              placeholder="Any dietary restrictions, special occasions, or preferences..."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full px-8 py-4 bg-garden-green text-cycladic-white rounded-full hover:bg-garden-green-dark transition-all hover:shadow-lg text-lg font-semibold"
          >
            Request Reservation
          </button>

          <p class="text-sm text-charcoal/60 text-center mt-4">
            You will receive a confirmation email or phone call within 24 hours
          </p>
        </form>
      </div>
    </div>
  </section>

  <!-- Alternative Contact Methods -->
  <section class="py-20 bg-gradient-to-br from-warm-sand/20 to-sea-teal/10">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-serif font-bold text-center mb-12 text-garden-green">
          Other Ways to Book
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Phone -->
          <div class="bg-white rounded-2xl p-8 text-center shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-garden-green/10 rounded-full flex items-center justify-center mb-4 mx-auto">
              <svg class="w-8 h-8 text-garden-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-serif font-bold mb-2 text-garden-green">Call Us</h3>
            <a href="tel:+302285012345" class="text-charcoal hover:text-garden-green transition-colors">
              +30 228 501 2345
            </a>
          </div>

          <!-- WhatsApp -->
          <div class="bg-white rounded-2xl p-8 text-center shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-sea-teal/10 rounded-full flex items-center justify-center mb-4 mx-auto">
              <svg class="w-8 h-8 text-sea-teal" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <h3 class="text-xl font-serif font-bold mb-2 text-sea-teal">WhatsApp</h3>
            <a href="https://wa.me/302285012345" class="text-charcoal hover:text-sea-teal transition-colors">
              Send Message
            </a>
          </div>

          <!-- Email -->
          <div class="bg-white rounded-2xl p-8 text-center shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-prickly-pear/10 rounded-full flex items-center justify-center mb-4 mx-auto">
              <svg class="w-8 h-8 text-prickly-pear" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-serif font-bold mb-2 text-prickly-pear">Email</h3>
            <a href="mailto:info@fragkosyko.com" class="text-charcoal hover:text-prickly-pear transition-colors break-all">
              info@fragkosyko.com
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Opening Hours -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-serif font-bold mb-8 text-garden-green">
        Opening Hours
      </h2>
      <div class="max-w-md mx-auto bg-gradient-to-br from-warm-sand/20 to-sea-teal/10 rounded-2xl p-8">
        <p class="text-lg mb-2"><strong>Daily</strong></p>
        <p class="text-2xl font-serif text-garden-green mb-6">8:00 AM - 12:00 AM</p>
        <div class="border-t border-charcoal/20 pt-6">
          <p class="text-sm text-charcoal/70 mb-2">Brunch Service: 8:00 AM - 2:00 PM</p>
          <p class="text-sm text-charcoal/70">Evening Service: 6:00 PM - 12:00 AM</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
