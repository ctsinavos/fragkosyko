---
import Layout from '../layouts/Layout.astro';
---

<Layout title="OG Image Preview - Fragkosiko">
  <div class="min-h-screen bg-cycladic-white py-20">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-serif font-bold text-center mb-4 text-garden-green">
        Social Media Preview (OG Image)
      </h1>
      <p class="text-center text-charcoal/70 mb-12 max-w-2xl mx-auto">
        This is what people will see when they share your website on Facebook, Twitter, LinkedIn, etc.
      </p>

      <div class="max-w-4xl mx-auto">
        <!-- Preview Card -->
        <div class="bg-white rounded-xl shadow-2xl overflow-hidden">
          <img
            src="/og-image.svg"
            alt="Fragkosiko Open Graph Preview"
            class="w-full"
          />
        </div>

        <div class="mt-8 bg-warm-sand/20 rounded-xl p-6">
          <h2 class="text-2xl font-serif font-bold mb-4 text-garden-green">How It's Used</h2>
