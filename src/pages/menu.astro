<script>
  const tabs = document.querySelectorAll('.menu-tab');
  const sections = document.querySelectorAll('.menu-section');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const menuType = tab.getAttribute('data-menu');

      // Update tab styles
      tabs.forEach(t => {
        t.classList.remove('text-garden-green', 'border-garden-green');
        t.classList.add('text-charcoal/60', 'border-transparent');
      });
      tab.classList.remove('text-charcoal/60', 'border-transparent');
      tab.classList.add('text-garden-green', 'border-garden-green');

      // Show/hide sections
      sections.forEach(section => {
        if (section.id === `menu-${menuType}`) {
          section.classList.remove('hidden');
        } else {
          section.classList.add('hidden');
        }
      });
    });
  });
</script>

